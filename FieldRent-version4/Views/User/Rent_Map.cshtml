@model MapEditViewModel


<form asp-controller="User" asp-action="Rent_Map" method="post">
    <div class="row">
        <div class="col-8">
            <div class="bg-white p-4">
                <h2 class="mb-4">Choose Maps </h2>
                <hr>
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="UserId">



                @foreach (var item in (List<Map>)ViewBag.xxx)
                    {
                    <div class="form-check mb-3 ">
                        <input class="form-check-input" type="checkbox" name="MapIds" value="@item.MapId"
                            id="genre_@(item.MapId)" @(Model.MapCheckIds.Any(i=> i.MapId == item.MapId) ? "checked" :
                        "")>
                        <label class="form-check-label" for="genre_@(item.MapId)">
                            @item.MapCoordinate -> @item.MapPrice TL
                        </label>
                    </div>

                    }

                    <div class="form-group">
                        <label for="Time" class="control-label">Time</label>
                        @Html.DropDownList("Time", ViewBag.TimeList as SelectList, new { @class = "form-control" })
                    </div>




                    @foreach (var item in (List<Request>)ViewBag.yyy)
                        {
                        <div class="form-check mb-3 ">
                            <input class="form-check-input" type="checkbox" name="ReqIds" value="@item.RequestId"
                                id="Req_@(item.RequestId)">
                            <label class="form-check-label" for="Req_@(item.RequestId)">
                                @item.RequestName -> @item.RequestPrice TL
                            </label>
                        </div>

                        }


    <button type="submit" class="btn btn-primary">Kaydet</button>
    </div>
</form>